<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:OnboardingGame.Converters"
             xmlns:renderers="clr-namespace:OnboardingGame.Renderers"
             Shell.TabBarIsVisible="False"
             Title="Profile"
             x:Class="OnboardingGame.Pages.Profile">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BooleanToColorConverter x:Key="colorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Grid>
                <Label Text="{Binding Name}"
                       Margin="5"
                       FontSize="Title"
                       HeightRequest="40"/>
                <Label Text="{Binding Title}"
                       Margin="5"
                       FontSize="Subtitle"
                       Grid.Row="1"/>
                
                <Grid HorizontalOptions="End"
                      VerticalOptions="Center"
                      Grid.RowSpan="2"
                      Margin="5">
                    <Image Source="{AppThemeBinding Light=light_heart.png, Dark=dark_heart.png}"
                           BackgroundColor="Red"/>
                    <Label x:Name="Exp"
                           Text="{Binding EXP}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HeightRequest="50"/>
                </Grid>
                <Frame HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Grid.RowSpan="2"/>
            </Grid>
            <Grid>
                <Label x:Name="Lvl"
                       FontSize="Medium"/>
                <renderers:CutomProgressBar Grid.Row="1"
                                            x:Name="ExpBar"
                                            Opacity="0.5"/>
                <Label Grid.Row="1"
                       x:Name="NextLevel"
                       Margin="5,0"
                       FontSize="Medium"/>
            </Grid>

            <Grid Margin="0,25">
                <Label Text="Achievements"
                       Margin="5"
                       FontSize="Title"
                       FontAttributes="Bold"
                       HeightRequest="0.01"
                       HorizontalOptions="Center"/>
                <CollectionView x:Name="Achievements"
                                Margin="5,-60,0,0"
                                SelectionMode="Single"
                                SelectionChanged="OnAchievementTapped"
                                Grid.Row="1"
                                HeightRequest="300"
                                VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2.5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Name}"
                                       Margin="10,0"
                                       FontSize="Medium"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding AchievementMessage}"
                                       Margin="10,0"
                                       Grid.Row="1"
                                       FontSize="Caption"/>
                                <Image Source="{AppThemeBinding Light=light_trophy_cup.png, Dark=dark_trophy_cup.png}"
                                       IsVisible="{Binding Status}"
                                       BackgroundColor="Gold"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center"
                                       Margin="5"
                                       Grid.RowSpan="2"
                                       Grid.Column="1"
                                       HeightRequest="50"/>
                                <Frame BorderColor="{Binding Status,Converter={StaticResource colorConverter}}"
                                       Margin="5,1"
                                       HeightRequest="25"
                                       HorizontalOptions="Fill"
                                       VerticalOptions="Fill"
                                       Grid.RowSpan="2"
                                       Grid.ColumnSpan="2"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Frame HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Grid.RowSpan="2"
                       
                       InputTransparent="True"/>
            </Grid>

            <Label x:Name="Date"
                   FontAttributes="Bold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>