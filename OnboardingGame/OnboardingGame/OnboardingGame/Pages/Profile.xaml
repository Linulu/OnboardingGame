<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.TabBarIsVisible="False"
             Title="Profile"
             x:Class="OnboardingGame.Pages.Profile">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Grid>
                <Frame HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Grid.RowSpan="2"/>
                <Label Text="{Binding Name}"
                       Margin="5"
                       FontSize="Title"/>
                <Label Text="{Binding Title}"
                       Margin="5"
                       FontSize="Subtitle"
                       Grid.Row="1"/>
                <Grid HorizontalOptions="End"
                      VerticalOptions="Center"
                      Grid.RowSpan="2"
                      Margin="5">
                    <Image Source="Heart.png"
                           BackgroundColor="Red"/>
                </Grid>
            </Grid>
            <Label x:Name="Lvl"
                   FontSize="Medium"/>
            <Label x:Name="Exp"
                   FontSize="Medium"/>
            <ProgressBar x:Name="ExpBar"
                         ProgressColor="Blue"/>
            <Label x:Name="Date"
                   FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>