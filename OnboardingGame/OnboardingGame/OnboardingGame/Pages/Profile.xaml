<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.TabBarIsVisible="False"
             Title="Profile"
             x:Class="OnboardingGame.Pages.Profile">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Grid>
                <Frame HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Grid.RowSpan="2"/>
                <Label Text="{Binding Name}"
                       Margin="5"
                       FontSize="Title"/>
                <Label Text="{Binding Title}"
                       Margin="5"
                       FontSize="Subtitle"
                       Grid.Row="1"/>
                
                <Grid HorizontalOptions="End"
                      VerticalOptions="Center"
                      Grid.RowSpan="2"
                      Margin="5">
                    <Image Source="Heart.png"
                           BackgroundColor="Red"/>
                    <Label x:Name="Exp"
                           Text="{Binding EXP}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HeightRequest="50"/>
                </Grid>
            </Grid>
            <Grid>
                <Label x:Name="Lvl"
                       FontSize="Medium"/>
                <ProgressBar Grid.Row="1"
                             x:Name="ExpBar"
                             ProgressColor="Red"
                             Opacity="0.5"
                             ScaleY="5"/>
                <Label Grid.Row="1"
                       x:Name="NextLevel"
                       FontSize="Medium"/>
            </Grid>

            <Grid Margin="0,25">
                <Frame HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Grid.RowSpan="2"/>
                <Label Text="Achievements"
                       Margin="5"
                       FontSize="Title"
                       FontAttributes="Bold"
                       HeightRequest="0.01"
                       HorizontalOptions="Center"/>
                <CollectionView x:Name="Achievements"
                                Margin="5,-60,0,0"
                                SelectionMode="Single"
                                SelectionChanged="OnAchievementTapped"
                                Grid.Row="1"
                                HeightRequest="300"
                                VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Name}"
                                       FontSize="Medium"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Status}"
                                       Grid.Row="1"
                                       FontSize="Caption"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>

            <Label x:Name="Date"
                   FontAttributes="Bold"/>

            <!--
            <ListView/CollectionView>
                Show achievment list
                - Number of clear for tasks each list
                - Milestones 
            </ListView/CollectionView>
            -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>