<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.TabBarIsVisible="False"
             Title="Profile"
             x:Class="OnboardingGame.Pages.Profile">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Label Text="{Binding Name}"
                   FontSize="Title"/>
            <Label Text="{Binding Title}"
                   FontSize="Subtitle"/>
            <Label x:Name="Lvl"
                   FontSize="Medium"/>
            <Label x:Name="Exp"
                   FontSize="Medium"/>
            <ProgressBar x:Name="ExpBar"
                         ProgressColor="Blue"/>
            <Label x:Name="Date"
                   FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>