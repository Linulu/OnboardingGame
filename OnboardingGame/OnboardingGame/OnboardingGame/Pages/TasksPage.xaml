<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:OnboardingGame.Converters"
             x:Class="OnboardingGame.Pages.TasksPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StatusToColorConverter x:Key="colorConverter"/>
            <converters:CompletionToProgressConverted x:Key="completionConverter"/>
            <converters:StatusToImageConverter x:Key="imageConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Margin="20, 35, 20, 20">
            <CollectionView x:Name="listView"
                            IsGrouped="True"
                            SelectionMode="Single"
                            SelectionChanged="OnListItemTapped">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Grid>
                            <ProgressBar Progress="{Binding Items, Converter={StaticResource completionConverter}}"
                                         ScaleY="10"
                                         ProgressColor="Green"/>
                            <Label Text="{Binding Name}"
                                   Margin="3"
                                   FontSize="Large"
                                   FontAttributes="Bold"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10"
                              Margin="5">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding title}"
                                   LineBreakMode="TailTruncation"
                                   WidthRequest="250"
                                   Margin="5,0,0,0"
                                   FontSize="Medium"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding points}"
                                   Margin="5,0,0,0"
                                   FontSize="Small"
                                   Grid.Row="1"/>
                            <Image Source="{Binding status, Converter={StaticResource imageConverter}}"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   HeightRequest="50"
                                   Margin="5"
                                   Grid.RowSpan="2"
                                   Grid.Column="1"/>
                            <Frame Grid.ColumnSpan="2"
                                   Grid.RowSpan="2"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"
                                   InputTransparent="True"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>