<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.TabBarIsVisible="False"
             Title="Settings"
             x:Class="OnboardingGame.Pages.Settings">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Button Text="Change Profile Name"
                    BackgroundColor="LightSeaGreen"
                    Clicked="ProfileButtonPress"/>
            <Button Text="About this app"
                    BackgroundColor="LightSeaGreen"
                    Clicked="AboutButtonPress"/>
            <Button Text="How to use this app"
                    BackgroundColor="LightSeaGreen"
                    Clicked="HowToButtonPress"/>
            <Button Text="Reset Data"
                    Clicked="OnButtonPress"
                    BackgroundColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>