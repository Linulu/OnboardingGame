<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnboardingGame.Pages.LoginSetupPage"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Title="Profile Setup">
    <ContentPage.Content>
        <StackLayout Margin="20,30,20,20">
            <Label Text="Username:"
                   FontSize="Large"/>
            <Entry x:Name="Username"
                   Placeholder="Username"/>
            <Label Text="Password"
                   FontSize="Large"/>
            <Entry x:Name="Password"
                   Placeholder="Password"
                   IsPassword="True"/>
            <Label Text="Title/Position"
                   FontSize="Large"/>
            <Entry x:Name="Title"
                   Placeholder="Ex: SW Developer"/>
            <Label Text="Car Benifits"
                   FontSize="Large"/>
            <CheckBox x:Name="CarBenifit"/>
            <Label Text="Start Date:"
                   FontSize="Large"/>
            <DatePicker x:Name="Start_Date"/>
            <Button Text="Finish"
                    Clicked="OnFinishClicked"
                    VerticalOptions="End"
                    HorizontalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>